<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="#badbc7">

    <TextView
        android:id="@+id/jenisSampah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="BOTOL PLASTIK"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="monospace" />

    <ImageView
        android:id="@+id/mainFoto"
        android:layout_width="164dp"
        android:layout_height="316dp"
        android:layout_marginTop="-20dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/recycle_bottle"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="240dp" />

    <TextView
        android:id="@+id/caraRecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="how to recycle this"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="monospace" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >

    <ImageView
        android:id="@+id/reuse"
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:layout_gravity="left"
        app:srcCompat="@drawable/reuse_bottle"
        tools:ignore="MissingConstraints"
         />

        <ImageView
            android:id="@+id/reduce"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_gravity="left"
            app:srcCompat="@drawable/reduce_bottle"
            android:layout_marginRight="50dp"
            tools:ignore="MissingConstraints"
             />
    </LinearLayout>

</LinearLayout>